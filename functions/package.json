{
  "name": "functions",
  "description": "Firebase Cloud Functions for Inverter App",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/automation.test.js",
    "test:edge-cases": "jest test/automation-edge-cases.test.js",
    "test:auth": "jest test/auth-flows.test.js",
    "test:integration": "node integration-test.js",
    "test:e2e": "node e2e-tests.js",
    "test:e2e:prod": "TEST_ENV=prod node e2e-tests.js",
    "test:e2e:auth": "node e2e-tests.js",
    "test:all": "npm test && npm run test:integration && npm run test:e2e",
    "pre-deploy": "node ../scripts/pre-deploy-check.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^7.0.5",
    "googleapis": "^144.0.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4"
  },
  "private": true
}
