	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var sdk = require('postman-collection');",
					"var crypto = require('crypto-js');",
					"",
					"// Get the path from the request URL",
					"// pm.request.url.path is an array of path segments",
					"var path = \"/\" + pm.request.url.path.join(\"/\");",
					"",
					"var token = pm.collectionVariables.get(\"token\");",
					"var timestamp = new Date().getTime();",
					"",
					"// Signature rule: Encrypt the string url + \"\\r\\n\" + token + \"\\r\\n\" + timestamp with md5",
					"// Note: The documentation implies 'url' is the path, and the python example uses 'path'.",
					"// The python example uses fr'{path}\\r\\n{token}\\r\\n{timestamp}' which implies literal \\r\\n characters.",
					"var signaturePlain = path + \"\\\\r\\\\n\" + token + \"\\\\r\\\\n\" + timestamp;",
					"var signature = crypto.MD5(signaturePlain).toString();",
					"",
					"pm.request.headers.add({key: \"token\", value: token});",
					"pm.request.headers.add({key: \"timestamp\", value: timestamp.toString()});",
					"pm.request.headers.add({key: \"signature\", value: signature});",
					"pm.request.headers.add({key: \"lang\", value: \"en\"});",
					"pm.request.headers.add({key: \"Content-Type\", value: \"application/json\"});"
				]
			}
		}
