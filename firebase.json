{
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/{roi,test,history,control,settings,curtailment-discovery}.html",
        "destination": "/{roi,test,history,control,settings,curtailment-discovery}.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000, immutable"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "codebase": "default"
  }
  ,
  "emulators": {
    "auth": { "port": 9099 },
    "firestore": { "port": 8080 },
    "pubsub": { "port": 8085 },
    
    "functions": { "port": 5001 },
    "hosting": { "port": 5000 },
    "ui": { "enabled": true, "port": 4000 },
    "hub": { "port": 4400 }
  }
}
